<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>TodoList</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <h1 class="text-center my-4">Liste des Tâches</h1>
        <div class="row">
            <!-- Colonne Tâches en cours -->
            <div class="col-md-6">
                <h2>Tâches en cours</h2>
                <ul class="list-group">
                    {% for task in tasks %}
                        {% if not task.isDone %}
                            <li class="list-group-item bg-secondary text-white">
                                <strong>{{ task.title }}</strong> - En cours
                                <p>{{ task.description }}</p>
                                <form action="{{ path('task_toggle', { id: task.id }) }}" method="post" style="display:inline;">
    <button type="submit" class="btn btn-success text-white">
        Marquer comme terminée
    </button>
</form>
                            </li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </div>
            
            <!-- Colonne Tâches terminées -->
            <div class="col-md-6">
                <h2>Tâches terminées</h2>
                <ul class="list-group">
                    {% for task in tasks %}
                        {% if task.isDone %}
                            <li class="list-group-item bg-success text-white">
                                <strong>{{ task.title }}</strong> - Terminée
                                <p>{{ task.description }}</p>
                               <form action="{{ path('task_toggle', { id: task.id }) }}" method="post" style="display:inline;">
    <button type="submit" class="btn btn-secondary text-white">
        Marquer comme en cours
    </button>
</form>
                            </li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>